{
  "compilerOptions": {
    "lib": ["es2016", "DOM"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES2015",
    "declaration": true,    
    "allowJs": false,
    "strict": true,
    "moduleResolution": "Node",
  },
  "include": [
    "src/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
